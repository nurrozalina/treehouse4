<div class="row">
  <p><h1>Signing up is easy and secure.</h1></p><br></br>
</div>
<div class="row">
  <div class="col-md-4">
    <div class="fieldset well">
      <legend>Sign up</legend>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :defaults => { :wrapper_html => {:class => 'form-group'}, :input_html => { :class => 'form-control'}}) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :first_name %>
            <%= f.input :last_name %>          
            <%= f.input :profile_name %>
            <%= f.input :email, required: true, autofocus: true %>
            <%= f.input :password, required: true %>
            <%= f.input :password_confirmation, required: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>    
  </div>

  <div class="col-md-8">
    <a href="http://imgur.com/Jwrlp"><img src="http://i.imgur.com/Jwrlp.jpg" class="img-fluid" width="800"  title="Hosted by imgur.com" /></a>
  </div>
</div>