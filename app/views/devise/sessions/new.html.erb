<div class="row">
	<div class="col-md-4">
		<div class="fieldset well">
			<legend>Sign in</legend>

			<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :defaults => { :wrapper_html => {:class => 'form-group'}, :input_html => { :class => 'form-control'}}) do |f| %>
		  <div class="form-inputs">
		    <%= f.input :email, required: false, autofocus: true %>
		    <%= f.input :password, required: false %>
		    <%= f.input :remember_me, :input_html => { :class => 'form-inline'}, as: :boolean if devise_mapping.rememberable? %>
		  </div>

		  <div class="form-actions">
		    <%= f.button :submit, "Sign in", class: "btn btn-default btn-success" %>
		    
		  </div>
		<% end %>

		<%= render "devise/shared/links" %>
		</div>		
	</div>

	<div class="col-md-8">
		<h2>Secure and trusted session. Always.</h2>
	</div>
</div>

